}

rectangle "App: Điện thoại" {
  usecase "Xem thông tin tài sản" as UC7
  usecase "Nhận thông báo di chuyển tài sản" as UC8
  usecase "Gửi yêu cầu bảo trì" as UC9
  usecase "Gửi yêu cầu mua sắm và thanh lý tài sản" as UC10
  
}

